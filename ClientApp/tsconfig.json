{
  "postinstall": "node ./module-alias.js",
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": false,
    "baseUrl": ".",
    // "paths": {
    //   "behavior/*": [
    //     "src/behavior/*"
    //   ],
    //   "components/*": [
    //     "src/components/*"
    //   ]
    // }
  },
  "include": [
    "./src"
  ]
}